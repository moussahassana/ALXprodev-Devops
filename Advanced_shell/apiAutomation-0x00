import requests
import subprocess

pocketbase_url = "https://pokeapi.co/api/v2/pokemon/"

def get_pokemon_data(pokemon_name):
    """
    Fetches data for a given Pokémon from the PokéAPI.
    
    Args:
        pokemon_name (str): The name of the Pokémon to fetch data for.
        
    Returns:
        dict: The JSON response containing Pokémon data.
    """
    try:
        response = requests.get(f"{pocketbase_url}{pokemon_name.lower()}")
        response.raise_for_status()
        with open('data.json', 'w') as file:
            file.write(response.text)
        return response.json()
    except requests.exceptions.RequestException as e:
        # Save error message to "errors.txt"
        with open('errors.txt', 'w') as file:
            file.write(str(e))
        
        try:
            curl_result = subprocess.run(
                ["curl", f"{pocketbase_url}{pokemon_name.lower()}"],
                capture_output=True,
                text=True,
                check=True
            )
            with open('data.json', 'w') as file:
                file.write(curl_result.stdout)
            return curl_result.stdout
        except Exception as curl_error:
            with open('errors.txt', 'a') as file:
                file.write(f"\nCurl fallback failed: {curl_error}")
            return None
